<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rover_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/rover_recycler_view"
            android:divider="@drawable/vertical_spacer">

            <Spinner
                android:id="@+id/rover_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/rover_spinner"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/purple_outline"
                android:popupBackground="@drawable/purple_outline_white_background"
                tools:listitem="@layout/rover_spinner"
                android:layout_marginVertical="8dp"/>

            <Spinner
                android:id="@+id/rover_camera_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rover_spinner"
                android:background="@drawable/purple_outline"
                android:popupBackground="@drawable/purple_outline_white_background"
                android:spinnerMode="dropdown"
                android:visibility="visible"
                tools:listitem="@layout/rover_spinner"
                android:layout_marginVertical="8dp"/>

            <Button
                android:visibility="visible"
                android:id="@+id/rover_open_dialog_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_image_button"
                app:layout_constraintTop_toBottomOf="@+id/rover_camera_spinner"
                android:layout_marginVertical="8dp"
                style="@style/style_button"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rover_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rover_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>